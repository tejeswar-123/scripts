- name: update apt cache
  hosts: all
  become: true
  tasks:
    - name: Install required software
      become: yes
      apt:
        name: "{{ item }}"
        state: present
      with_items:
         - wordpress
         - apache2
         - mysql-server
         - php-common
         - php-cli
         - php-mysql
         - php
         - libapache2-mod-php

         # tasks file for apache2
- name: Install Apache2 web server
  apt:
    name: apache2
    state: present
  tags: webserver
- name: Start and enable Apache2
  service:
    name: apache2
    state: started
    enabled: yes
  tags: webserver
- name: Enable HTTP service on the remote host
  ufw:
    rule: allow
    name: 'Apache Full'
  tags: webserver
- name: Reload UFW service after enabling HTTP service
  command: ufw reload
  tags: webserver
- name: Remove file from Apache2
  file:
    path: /var/www/html/index.html
    state: absent

# task for mariadb
- name: Update apt cache
  apt:
    update_cache: yes
    cache_valid_time: 3600
- name: Install MariaDB server
  apt:
    name: mariadb-server
    state: present
- name: Install MySQL Python library
  apt:
    name: python3-mysqldb
    state: present
- name: Start and enable MariaDB service
  systemd:
    name: mariadb
    state: started
    enabled: yes
- name: Create WordPress database
  mysql_db:
    name: "{{ wordpress_db }}"
    state: present
- name: Create WordPress user with privileges
  mysql_user:
    name: "{{ wordpress_dbuser }}"
    password: "{{ wordpress_dbpass }}"
    priv: "{{ wordpress_db }}.*:ALL"
    state: present

# handlers file for mariadb

- name: Restart MariaDB
  systemd:
    name: MariaDB
    state: restarted

    # defaults file for mariadb

wordpress_db: wordpress
wordpress_dbuser: saiteja
wordpress_dbpass: saiteja

# tasks file for php

- name: Install PHP and extensions
  apt:
    name: "{{ item }}"
    state: present
  loop:
    - php
    - php-mysql
    - libapache2-mod-php
    - php-curl
    - php-cli
    - php-cgi
    - php-gd

# tasks file for wordpress

- name: Download WordPress
  get_url:
    url: https://wordpress.org/latest.tar.gz
    dest: /tmp/wordpress.tar.gz
- name: extract WordPress
  unarchive:
    src: /tmp/wordpress.tar.gz
    dest: /var/www/html
    remote_src: yes
- name: set permissions on WordPress directory
  file:
    path: /var/www/html/wordpress
    owner: www-data
    group: www-data
    mode: ‘0755’
    recurse: yes

